{
  "name": "konosuba-fda-api",
  "version": "1.0.0",
  "description": "Static API for Konosuba Fantastic Days information",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --no-zero-props",
    "list-repo": "node scripts/load-repo-filelist.js",
    "format": "prettier --write ."
  },
  "keywords": [
    "konosuba",
    "api",
    "static"
  ],
  "author": "Stefan Ginev",
  "license": "GPL-3.0",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "embeddedLanguageFormatting": "auto"
  },
  "devDependencies": {
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "yaml": "^2.7.0"
  }
}
